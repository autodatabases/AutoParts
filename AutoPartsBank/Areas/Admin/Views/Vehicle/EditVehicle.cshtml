@model Vehicle
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Update Vehicle</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" enctype="multipart/form-data">
            <input asp-for="ImageUrl" hidden />
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        <div asp-validation-summary="ModelOnly" class="row"></div>
                        <input asp-for="VehicleId" hidden/>
                        <div class="row">
                            <div class="form-floating py-2 col-6">
                                <input asp-for="VIN" type="text" class="form-control border-0 shadow" />
                                <label asp-for="VIN" class="ms-2"></label>
                                <span asp-validation-for="VIN" class="text-primary"></span>
                            </div>
                            <div class="form-floating py-2 col-6">
                                <input asp-for="Manufacturer" type="text" class="form-control border-0 shadow" />
                                <label asp-for="Manufacturer" class="ms-2"></label>
                                <span asp-validation-for="Manufacturer" class="text-primary"></span>
                            </div>
                            <div class="form-floating py-2 col-6">
                                <input asp-for="Model" type="text" class="form-control border-0 shadow" />
                                <label asp-for="Model" class="ms-2"></label>
                                <span asp-validation-for="Model" class="text-primary"></span>
                            </div>
                            <div class="form-floating py-2 col-6">
                                <input asp-for="BuildYear" type="text" class="form-control border-0 shadow" />
                                <label asp-for="BuildYear" class="ms-2"></label>
                                <span asp-validation-for="BuildYear" class="text-primary"></span>
                            </div>
                            <div class="form-floating py-2">
                                <input type="file" name="file" class="form-control border-0 shadow" />
                                <label asp-for="ImageUrl" class="ms-2"></label>
                            </div>
                        </div>
                        <div class="row pt-2 pb-2">
                            <div class="col-6 col-md-3">
                                    <button type="submit" class="btn btn-primary form-control">
                                        <i class="bi bi-database-fill-add"></i> Add
                                    </button>
                               
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-area="Admin" asp-controller="Vehicle" asp-action="Index" class="btn btn-outline-primary form-control">
                                    <i class="bi bi-arrow-left-circle-fill"></i> Back
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-2">
                    <img src="@Model.ImageUrl" width="100%" style="border-radius:5px; border:1px solid #bbb9b9" />
                </div>
            </div>

        </form>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
