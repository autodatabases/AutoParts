@model Vendor
<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Vendor</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <div class="border p-3 mt-4">
                <div class="row">
                    <div class="form-floating py-2 col-6">
                        <input asp-for="VendorId" disabled type="text" class="form-control border-0 shadow" />
                        <label asp-for="VendorId" class="ms-2"></label>
                    </div>
                    <div class="form-floating py-2 col-6">
                        <input asp-for="Manufacturer" disabled type="text" class="form-control border-0 shadow" />
                        <label asp-for="Manufacturer" class="ms-2"></label>
                    </div>
                    <div class="form-floating py-2 col-6">
                        <input asp-for="Model" disabled type="text" class="form-control border-0 shadow" />
                        <label asp-for="Model" class="ms-2"></label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">
                            <i class="bi bi-trash3-fill"></i> Delete
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-area="Admin" asp-controller="Vendor" asp-action="Index" class="btn btn-outline-secondary form-control">
                            <i class="bi bi-arrow-left-circle-fill"></i> Back
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}