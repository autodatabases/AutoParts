@model PartCategory
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Add New Part Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <div class="border p-3">
                <div asp-validation-summary="ModelOnly" class="row"></div>
                <div class="row">
                    <div class="form-floating py-2 col-6">
                        <input asp-for="CategoryName" type="text" class="form-control border-0 shadow" />
                        <label asp-for="CategoryName" class="ms-2"></label>
                        <span asp-validation-for="CategoryName" class="text-primary"></span>
                    </div>
                </div>
                <div class="row pt-2 pb-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">
                            <i class="bi bi-database-fill-add"></i> Add
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-area="Admin" asp-controller="PartCategory" asp-action="Index" class="btn btn-outline-primary form-control">
                            <i class="bi bi-arrow-left-circle-fill"></i> Back
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
