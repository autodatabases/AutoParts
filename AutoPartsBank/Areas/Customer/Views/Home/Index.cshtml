@model IEnumerable<Part>

    <div class="row pb-3">
        @foreach(var part in Model)
        {
            <div class="col-lg-3 col-sm-6">
                <div class="row p-2">
                    <div class="col-12 p-1">
                        <div class="card border-0 p-3 shadow border-top border-5 rounded">
                            <img src="@part.ImageUrl" class="card-img-top rounded" />
                        </div>
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@part.PartName</p>
                                <p class="card-title text-warning text-center">@part.Category.CategoryName</p>
                            </div>
                            <div>
                                <a asp-action="PartDetails" asp-route-partId ="@part.PartId" class="btn btn-primary bg-gradient border-0 form-control">
                                    Part Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
</div>