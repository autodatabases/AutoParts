@model CarPart

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-danger">Add Car Part</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Manufacturer" class="p-0"></label>
            <input asp-for="Manufacturer" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Model" class="p-0">Model</label>
            <input asp-for="Model" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Year" class="p-0"></label>
            <input asp-for="Year" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="PartName" class="p-0"></label>
            <input asp-for="PartName" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="DisplayOrder" class="p-0"></label>
            <input asp-for="DisplayOrder" disabled class="form-control" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-outline-danger form-control">
                    <i class="bi bi-trash3-fill"></i> Delete
                </button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="CarPart" asp-action="Index" class="btn btn-outline-secondary form-control">
                    <i class="bi bi-arrow-left-circle-fill"></i> Back
                </a>
            </div>
        </div>
    </div>
</form>
