@model List<Address>
<partial name="_Notification"/>
<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-danger">
                Address List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Address" asp-action="AddAddress" class="btn btn-outline-danger">
                <i class="bi bi-plus-square-fill"></i> Add New Address
            </a>
        </div>
        
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Address ID</th>
            <th>Street</th>
            <th>Suburb</th>
            <th>State</th>
            <th>Postcode</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>@obj.AddressId</td>
                <td>@obj.Street</td>
                <td>@obj.Suburb</td>
                <td>@obj.State</td>
                <td>@obj.Postcode</td>
                <td>
                    <div class="w-20 btn-group">
                        <a asp-controller="Address" asp-action="EditAddress" asp-route-addressId="@obj.AddressId" class="btn btn-dark mx-2">
                            <i class="bi bi-pencil-fill"></i> Edit
                        </a>
                        <a asp-controller="Address" asp-action="DeleteAddress" asp-route-addressId="@obj.AddressId" class="btn btn-primary">
                            <i class="bi bi-trash3-fill"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>